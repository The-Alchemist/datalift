#load_core_resources
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Datalift - #i18n("project.add_dataset")</title>
#header_links
</head>

<body>

<script>
	$(function() {
	
		$("input:submit").button();
		$("#accordion").accordion({
			autoHeight: false,
			navigation: true
		});
	});
</script>

#banner

<div id="content" class="ui-widget-content dl-main-panel">
<h3 class="ui-widget-header dl-widget-header">#i18n("project.add_dataset")</h3>
<div class="dl-panel">
<a href="$it.uri">#i18n("back")</a>

<div id="accordion">

	<h3><a href="#">CSV</a></h3>
	<div>
	<form method="post" action="$it.getRdfId()/csvupload" enctype="multipart/form-data" class="form_formated">
		<p>#i18n("project.upload_csv") : $esc.html($it.getTitle())</p>
		<p><input type="file" name="source"/></p>
		<p><label for="title_row">#i18n("project.upload_csv_activate") : </label>
		<input type="checkbox" id="title_row" name="title_row"/></p>
		<p><label for="separator">#i18n("project.upload_csv_separator") :</label>
		<select id="separator" name="separator"></p>
	#foreach($s in $sep)
	#if( $foreach.count == 1 )
		<option value="$esc.html($s.name())" selected="true">$esc.html($s.toString())</option>
	#else
		<option value="$esc.html($s.name())">$esc.html($s.toString())</option>
	#end
	#end
		</select>
		<p><input type="submit"/></p>
	</form>
	</div>
	
	<h3><a href="#">RDF</a></h3>
	<div>
	<form method="post" action="$it.getRdfId()/rdfupload" enctype="multipart/form-data" class="form_formated">
		<p>#i18n("project.upload_rdf") : $esc.html($it.getTitle())</p>
		<p><input type="file" name="source"/></p>
		<p><label for="mime_type">#i18n("project.upload_rdf_format") : </label>
		<select id="mime_type" name="mime_type">
			<option id="rdfxml" 	value="application/rdf+xml">RDF/XML</option>
			<option id="ntriple"	value="application/n-triples">NTriples</option>
			<option id="turtle"		value="text/turtle">Turtle</option>
			<option id="n3"			value="text/rdf+n3">N3</option>
			<option id="trig"		value="application/x-trig">TriG</option>
			<option id="trix"		value="application/trix">TriX</option>
		</select></p>
		<p><input type="submit"/></p>
	</form>
	</div>
	
	<h3><a href="#">#i18n("project.upload_db.title")</a></h3>
	<div>
	<form method="post" action="$it.getRdfId()/dbupload" class="form_formated">
		<p><label for="source_url">#i18n("project.upload_db.source_url") :</label>
		<input type="text" name="source_url" id="source_url" /></p>
		<p><label for="user">#i18n("project.upload_db.user") :</label>
		<input type="text" id="user" name="user"/></p>
		<p><label for="password">#i18n("project.upload_db.password") :</label>
		<input type="password" name="password" id="password"/></p>
		<p><label for="database">#i18n("project.upload_db.source_name") :</label>
		<input type="text" name="database" id="database" /></p>
		<p><label for="title">#i18n("project.upload_db.db") :</label>
		<input type="text" id="title" name="title" /></p>
		<p><label for="request">#i18n("project.upload_db.request") :</label>
		<input type="text" id="request" name="request" /></p>
		<p><label for="cache_duration">#i18n("project.upload_db.cache_duration") :</label></p>
		<p><input type="text" id="cache_duration" name="cache_duration" /></p>
		<p><input type="submit"/></p>
	</form>
	</div>
	
</div>
</div>
</div>
#footer
</body>
</html>
